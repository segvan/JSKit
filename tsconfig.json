{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types" : ["node", "express"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
